{
	"version": "0.2.0",
	"configurations": [
		{
			"name": "Python: 当前文件",
			"type": "debugpy",
			"request": "launch",
			"program": "${file}",
			"console": "integratedTerminal"
		},
		{
			"name": "Python: Django",
			"type": "debugpy",
			"request": "launch",
			"program": "${workspaceFolder}/manage.py",
			"args": [
				"runserver",
				"0:8000"
			],
			"django": true
		}
	]
}