{
	"files.exclude": {
		"**/__pycache__": true,
		"**/.DS_Store": true,
		"**/.git": true,
		"**/VENV": true,
		"**/node_modules": false,
		"**/.idea/": true,
		"whoosh_index": true
	},
	"search.exclude": {
		"TEMP/": true,
		"**/*.csv": true
	},
	/*******Makefile*******/
	"makefile.extensionOutputFolder": "./.vscode",
	/****Todo Tree****/
	"todo-tree.filtering.excludeGlobs": [
		"**/VENV/**",
		"**/node_modules",
		"**/dist/**",
	],
	"todo-tree.general.tags": [
		"TODO",
		"FIXME",
		"BUG"
	],
	/****live Sass Compile****/
	"liveSassCompile.settings.formats": [
		{
			"extensionName": ".css",
			// "format": "expanded",
			"format": "compressed"
		}
	],
	"liveSassCompile.settings.generateMap": false,
	/***VSCode Counter***/
	"VSCodeCounter.useGitignore": true,
	"VSCodeCounter.outputPreviewType": "markdown",
	"VSCodeCounter.history": 2,
	/****Github Copilot****/
	"github.copilot.enable": {
		"*": true,
		"yaml": false,
		"plaintext": false,
		"markdown": true
	},
	/****Code Spell Checker****/
	"cSpell.ignorePaths": [
		"./pipdeptree.txt",
		"*.csv"
	],
	"[python]": {
		"editor.defaultFormatter": "ms-python.black-formatter"
	},
	"python.formatting.provider": "black",
}